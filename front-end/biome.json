{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["node_modules", ".nuxt", "dist", ".output"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "warn",
				"noUselessFragments": "error",
				"useArrowFunction": "warn"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"useHookAtTopLevel": "error"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useBlockStatements": "warn",
				"useCollapsedElseIf": "error",
				"useConsistentArrayType": {
					"level": "error",
					"options": {
						"syntax": "shorthand"
					}
				},
				"useConst": "error",
				"useDefaultParameterLast": "error",
				"useExportType": "error",
				"useImportType": "error",
				"useNodejsImportProtocol": "error",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useTemplate": "error"
			},
			"suspicious": {
				"noDebugger": "error",
				"noDoubleEquals": "error",
				"useAwait": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["*.vue"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "error",
						"useImportType": "error"
					}
				}
			}
		},
		{
			"includes": ["*.ts", "*.tsx"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "error"
					}
				}
			}
		}
	]
}
